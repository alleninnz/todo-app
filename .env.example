# =============================================================================
# Environment Configuration
# =============================================================================
# Copy this file to .env and update values as needed for your environment
#
# NOTE: All environment variables MUST be prefixed with VITE_ to be exposed
# to the client-side application.
# =============================================================================

# -----------------------------------------------------------------------------
# Development & Debugging
# -----------------------------------------------------------------------------
# Enable debug logging in browser console (true/false)
VITE_ENABLE_DEBUG=false

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# Enable MSW (Mock Service Worker) for API mocking in development
# Useful for frontend development without backend dependency
VITE_ENABLE_MSW=false

# -----------------------------------------------------------------------------
# Performance & Network
# -----------------------------------------------------------------------------
# Number of retry attempts for failed API requests (0-5)
VITE_API_RETRY_COUNT=3

# -----------------------------------------------------------------------------
# UI Configuration (Optional)
# -----------------------------------------------------------------------------
# Maximum number of snackbar notifications displayed simultaneously
VITE_SNACKBAR_MAX_COUNT=3

# Auto-hide duration for snackbar notifications in milliseconds
VITE_SNACKBAR_AUTO_HIDE=4000

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Application name displayed in UI and browser title
VITE_APP_NAME=TodoApp

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Base URL for the backend API (without trailing slash)
VITE_API_BASE_URL=http://localhost:3000

# API request timeout in milliseconds (min: 1000, max: 30000)
VITE_TIMEOUT=10000
